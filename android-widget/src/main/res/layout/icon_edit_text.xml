<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/container"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/edit_box"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_box"
        android:paddingStart="@dimen/l_large"
        android:paddingEnd="@dimen/l_large">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/edit_box"
            android:layout_height="@dimen/edit_box"
            android:padding="@dimen/l_medium"
            android:src="@drawable/ic_facebook"/>
        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_box"
            android:layout_toEndOf="@+id/icon"
            android:hint="@string/edit_text"
            android:background="@color/transparent"/>
    </RelativeLayout>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@drawable/action_bar_shadow"/>
</LinearLayout>
